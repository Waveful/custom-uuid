{
  "name": "custom-uuid",
  "description": "Generate UUIDs with custom formats.",
  "version": "1.0.2",
  "license": "Apache-2.0",
  "author": "Waveful",
  "engines": {
    "node": ">=14.17.0"
  },
  "main": "build/index.js",
  "files": [
    "build/**/*"
  ],
  "keywords": [
    "custom uuid",
    "uuid",
    "uuid generator",
    "universally unique identifier",
    "short uuid"
  ],
  "scripts": {
    "compile": "tsc -p .",
    "lint": "tslint -p tsconfig.json",
    "prettier": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "test": "mocha --recursive --require ts-node/register 'test/**/*.ts'",
    "prepare": "npm run compile",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm test && npm run lint",
    "version": "git add -A src",
    "postversion": "git push && git push --tags",
    "create-patch-version": "npm version patch",
    "create-minor-version": "npm version minor",
    "create-major-version": "npm version major",
    "publish-latest-version": "npm publish"
  },
  "repository": "Waveful/custom-uuid",
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/chai-as-promised": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "^17.0.9",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "mocha": "^9.1.4",
    "prettier": "^2.5.1",
    "ts-node": "^10.4.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.5.4"
  }
}
